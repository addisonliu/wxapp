page{
  background-color: #fff;
}
.container{
  padding-top: 20rpx;
  text-align: center;
  background-color: #fff;
}
.Email{
  display: flex;
  justify-content: space-between;
  height:40rpx;
  line-height:40rpx;
  margin:0 100rpx;
}
input{
  text-align: right;
}
button{
  width: 60%;
  margin-top: 100rpx;
  margin-bottom: 200rpx;
  color: #fff;
  letter-spacing: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color:rgb(47,183,235);
  border-radius: 40rpx;
}
.message{
  display: flex;
  justify-content: center;
  align-items: center;
}
.message>view{
  width: 70%;
  padding: 20rpx 10rpx;
  border: 1rpx solid #b8b6ba;
  text-align: left;
  line-height: 40rpx;
}