/* pages/DetailedMessage/detaildmessage.wxss */
.con{
  position: fixed;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.text{
  text-align: center;
}

.txt_name{
  font-size: 1.5rem;
}

.pickdate{
  display: flex;
  flex-direction: row;
  width: 100%;
}

.txt1{
  text-align: left;
  margin-top: 2%;
  display: flex;
  flex-direction: row;
  width: 70%;
}

.t1{
  border-bottom:2px double #000;
}

.t2{
  border-bottom:2px double #000;
}


.date_btn{
  width:30%;
}

.btn{
  height: 80rpx;
  color: #6699FF;
  border: 4rpx solid #6699FF;
  font-size: 1rem;
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tr{
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.bg-w{
  background:snow ;
  margin-top: 2%;
}

.th{
  width: 50%;
  justify-content: center;
  align-items: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  border-bottom:  1px solid #000;
}

.bg-g{
  background: #E6F3F9;
}

.td{
  height: 3rem;
  justify-content: end;
  align-items: stretch;
}

.td1{
  width: 50%;
  height: 3rem;
  justify-content: end;
  align-items: stretch;
  padding-left: 1.5rem;
}

.border{
  height: 70rpx;
  color: #6699FF;
  border: 3rpx solid #6699FF;
  border-radius: 80rpx;
  font-size: 1rem;
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn_bottom{
  height: 3rem;
}
