/* pages/vacationSearch/vacationSearch.wxss */

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.vacation-title {
  width: 100%;
  height: 3rem;
  background-color: #2fb7eb;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.vacation-title text {
  color: #fff;
  /* line-height: 80rpx; */
  width: 50%;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.vacation-content{
  display: flex;
  flex-direction: column;

}
.vacation-content view{
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.vacation-content view:nth-child(odd){
  background-color: #e6f3f9;
}  
.vacation-content view:nth-child(even){
  background-color: #fff;
}
.vacation-content view text {
  font-size: 29rpx;
  line-height: 80rpx;
  width: 50%;
  height: 80rpx;
  text-align: center;
}
