page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #2fb7eb;
  height: 80rpx;
  width: 100%;
  border-bottom: 2rpx solid #e8e8e8;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  color: #82e3fb;
  font-size: 24rpx;
}
.navbar .item.active{
  display: inline-block;
  color: #e3ebf0;
}
.navbar .item.active::after{
  content: "";
  display: inline-block;
  position: absolute;
  bottom: 0;
  left: 50%;
  right: 0;
  transform: translateX(-50%);
  height: 4rpx;
  width: 60rpx;
  background: #e3ebf0;
  border-radius: 25% 25% 0 0;
}
.swiper{
  width: 100%;
  padding-top: 30rpx;
  background: #fff;
}
.home-menu{
  width: 100%;
  height: 200rpx;
  overflow: scroll;
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
}
.menuItem{
  width:250rpx;
  height: 200rpx;
  text-align: center;
}
.menuItem .a {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.home-navigator-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon{
  width: 60rpx;
  height: 60rpx;
}
.txt{
  height: 24rpx;
  width: 100%;
  font-size: 24rpx;
  color: #333;
  text-align: center;
}
